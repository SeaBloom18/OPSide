<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ops.opside">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OPSide"
        tools:targetApi="31">
        <activity
            android:name=".flows.sign_on.dealerModule.view.DealerActivity"
            android:exported="false" />
        <activity
            android:name=".flows.sign_on.taxCollectionModule.view.TaxCollectionActivity"
            android:exported="false" />
        <activity
            android:name=".flows.sign_off.SplashModule.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".flows.sign_off.loginModule.view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".flows.sign_on.dashboardModule.view.MainActivity"
            android:exported="true" />
    </application>

</manifest>